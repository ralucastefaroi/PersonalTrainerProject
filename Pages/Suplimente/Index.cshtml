@page
@model PersonalTrainerProject.Pages.Suplimente.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="font-family:'Trebuchet MS';text-align: center;color:#6699ff">Suplimente</h1>
<p>
    <a asp-page="Create" style="font-family:'Trebuchet MS';color:#9494b8;">Adaugă un supliment nou</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="font-family:'Trebuchet MS';color:#99bbff">
                @Html.DisplayNameFor(model => model.Supliment[0].Denumire)
            </th>
            <th style="font-family:'Trebuchet MS';color:#99bbff">
                @Html.DisplayNameFor(model => model.Supliment[0].Cantitate)
            </th>
            <th style="font-family:'Trebuchet MS';color:#99bbff">
                @Html.DisplayNameFor(model => model.Supliment[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Supliment)
        {
            <tr>
                <td style="font-family:'Trebuchet MS'">
                    @Html.DisplayFor(modelItem => item.Denumire)
                </td>
                <td style="font-family:'Trebuchet MS'">
                    @Html.DisplayFor(modelItem => item.Cantitate)
                </td>
                <td style="font-family:'Trebuchet MS'">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID" style="font-family:'Trebuchet MS'">Editează</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID" style="font-family:'Trebuchet MS'">Detalii</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID" style="font-family:'Trebuchet MS'">Șterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>
