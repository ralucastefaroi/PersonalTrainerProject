@page
@model PersonalTrainerProject.Pages.Produse.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 style="font-family:'Trebuchet MS';color:#6699ff">Șterge produsul</h1>

<h3  style="font-family:'Trebuchet MS';color:#9494b8">Ești sigur că vrei să ștergi?</h3>
<div>
    <h4 style="font-family:'Trebuchet MS';color:#9494b8">Produs</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="font-family:'Trebuchet MS';color:#99bbff">
            @Html.DisplayNameFor(model => model.Produs.Denumire)
        </dt>
        <dd class="col-sm-10" style="font-family:'Trebuchet MS'">
            @Html.DisplayFor(model => model.Produs.Denumire)
        </dd>
        <dt class="col-sm-2" style="font-family:'Trebuchet MS';color:#99bbff">
            @Html.DisplayNameFor(model => model.Produs.Pret)
        </dt>
        <dd class="col-sm-10" style="font-family:'Trebuchet MS'">
            @Html.DisplayFor(model => model.Produs.Pret)
        </dd>
        <dt class="col-sm-2" style="font-family:'Trebuchet MS';color:#99bbff">
            @Html.DisplayNameFor(model => model.Produs.Supliment)
        </dt>
        <dd class="col-sm-10" style="font-family:'Trebuchet MS'">
            @Html.DisplayFor(model => model.Produs.Supliment.Denumire)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Produs.ID" />
        <input type="submit" value="Șterge" class="btn btn-danger" style="font-family:'Trebuchet MS'"/> |
        <a asp-page="./Index" style="font-family:'Trebuchet MS'">Înapoi</a>
    </form>
</div>
