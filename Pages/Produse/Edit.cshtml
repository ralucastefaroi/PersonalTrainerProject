@page
@model PersonalTrainerProject.Pages.Produse.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 style="font-family:'Trebuchet MS';color:#6699ff">Editează produsul</h1>

<h4 style="font-family:'Trebuchet MS';color:#9494b8">Produs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produs.ID" />
            <div class="form-group" style="font-family:'Trebuchet MS';color:#99bbff">
                <label asp-for="Produs.Denumire" class="control-label"></label>
                <input asp-for="Produs.Denumire" class="form-control" />
                <span asp-validation-for="Produs.Denumire" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-family:'Trebuchet MS';color:#99bbff">
                <label asp-for="Produs.Pret" class="control-label"></label>
                <input asp-for="Produs.Pret" class="form-control" />
                <span asp-validation-for="Produs.Pret" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-family:'Trebuchet MS';color:#99bbff">
                <label asp-for="Produs.SuplimentID" class="control-label"></label>
                <select asp-for="Produs.SuplimentID" class="form-control" asp-items="ViewBag.SuplimentID"></select>
                <span asp-validation-for="Produs.SuplimentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvează" class="btn btn-primary" style="font-family:'Trebuchet MS'"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Înapoi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
